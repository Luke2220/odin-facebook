<%=form_with model: @post do |f|%>
<br/>
    <%=f.label :title, 'Title of your post:'%><br/>
    <%= f.text_field :title%><br/><br/>

    <%=f.label :body, 'Body of your post:'%><br/>
    <%= f.text_area :body%><br/>

    <%=f.label :image, 'Optional post image:'%><br/>
    <%= f.file_field :image%><br/>

    <%=f.submit 'Create Post'%>
<%end%>