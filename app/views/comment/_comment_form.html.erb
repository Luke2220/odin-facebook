<%=form_with url: comment_index_path, method: :post do |f|%>
<%=f.label :content, 'Create Comment:'%><br/>
<%= f.text_area :content%><br/>
<%= f.hidden_field :user_id, value: user%>
<%= f.hidden_field :object_id, value: object%>
<%= f.hidden_field :object_name, value: object_name%>
<%=f.submit 'Post Comment'%>
<%end%>